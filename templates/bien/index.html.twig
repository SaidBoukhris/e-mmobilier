{% extends 'base.html.twig' %}

{% block title %}Bien index{% endblock %}

{% block body %}
        <div class="cards">
        {% for bien in biens %}
        <a href="{{ path('bien_show', {'id': bien.id}) }}">
            <div class="card">
                <img src="{{ bien.photo }}" alt="image du bien" style="width:350px;height:200px">
                <div class="container">
                    <h2><b>{{ bien.type }} de {{ bien.surfaceH }}m²</b></h2>
                    <p>{{ bien.pieces }} pièces · {{ bien.localisation }}</p>
                    <h2><em>{{ bien.prix }}€</em></h2>
                {% if bien.surfaceT == false %}
                    <p>Pas de terrain</p>
                    {% else %}
                    <p>Terrain de {{ bien.surfaceT }}m²</p>
                {% endif %}
                    <p>Style : {{ bien.etat }}</p>
                    <div class="energieContainer">Classe énergetique: 
                {% if bien.energie.hex != null %}
                        <div class="energie" style="background-color:{{ bien.energie.hex }}"><p>{{ bien.energie.colorName }}</p></div>
                    {% else %}
                        <div class="energie energieNull" ><p>{{ bien.energie.colorName }} </p></div>
                {% endif %}
                    </div>
                    <p>Description : {{ bien.description | u.truncate(50) }} ...</p>
                </div>

        <a href="{{ path('bien_show', {'id': bien.id}) }}">show</a>
        <a href="{{ path('bien_edit', {'id': bien.id}) }}">edit</a>
            </div> 
        </a>
        {% else %}
                <p colspan="11">no records found</p>
        {% endfor %}
        </div>
{% endblock %}
