{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<div class="head">
    <div class="title">
        <h1>Agence {{ controller_name }}<br> Région Occitanie</h1>
        <h2>Transaction – location – gestion – estimation</h2>
    </div>
</div>

<div class="title">
    <h1>Nos coups de coeur <icon class="fa fa-heart-o"></icon></h1>
</div>

<div class="cards">
{% for bien in biens %}
    <a class="card" href="{{ path('bien_show', {'id': bien.id}) }}">
        <div class="cardImage">
            <img src="{{ bien.photo }}" alt="image du bien" style="width:350px;height:200px">
        </div>
        <div class="cardInfo">
            <div class="cardDetail">
                <p class="cardDetailtitle">{{ bien.type }} {{ bien.pieces }} pièces {{ bien.surfaceH }}m²</p>
                <p class="cardDetailprice">{{ bien.prix }}€</p>
                <p class="cardDetailaddr">{{ bien.localisation }}</p>
                <p class="energie">{{ bien.energie }}</p>
            </div>
            <div class="cardDate">
                <div>
                    {% if bien.dateModification is not null %}
                        {{ bien.dateModification ? bien.dateModification|date('d / m') : '' }}
                    {% else %}
                        {{ bien.dateCreation ? bien.dateCreation|date('d / m') : '' }}
                    {% endif %}
                </div>
                <div>
                    <icon class="fa fa-heart-o"></icon>
                </div>
            </div>
        </div>
    </a>
{% endfor %}
</div>

{% endblock %}
